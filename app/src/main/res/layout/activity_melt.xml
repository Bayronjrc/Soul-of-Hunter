<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/melt_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/melt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/top_bar_background"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/melt_back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_arrow"
            android:background="?android:attr/selectableItemBackground"
            android:padding="6dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Melt"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/melt_help_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/help_icon"
            android:background="?android:attr/selectableItemBackground"
            android:padding="6dp" />

    </LinearLayout>

    <!-- Melt Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/melt_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/reward_preview_background"
        app:tabTextColor="@color/text_secondary"
        app:tabSelectedTextColor="@color/orange"
        app:tabIndicatorColor="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/melt_header">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forge" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enhance" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejuve" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Main Content Area -->
    <LinearLayout
        android:id="@+id/melt_main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/melt_tab_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Forge Section -->
        <LinearLayout
            android:id="@+id/forge_section"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/hero_card_background"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equipment Forge"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Forge Formula -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Input Items -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/forge_input_1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/equipment_slot_background"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="@color/text_hint"
                            android:textSize="24sp"
                            android:layout_gravity="center" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="8dp" />

                    <FrameLayout
                        android:id="@+id/forge_input_2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/equipment_slot_background"
                        android:layout_marginHorizontal="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="@color/text_hint"
                            android:textSize="24sp"
                            android:layout_gravity="center" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="8dp" />

                    <FrameLayout
                        android:id="@+id/forge_input_3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/equipment_slot_background"
                        android:layout_marginHorizontal="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="@color/text_hint"
                            android:textSize="24sp"
                            android:layout_gravity="center" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="8dp" />

                    <FrameLayout
                        android:id="@+id/forge_input_4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/equipment_slot_background"
                        android:layout_marginHorizontal="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="@color/text_hint"
                            android:textSize="24sp"
                            android:layout_gravity="center" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="8dp" />

                    <FrameLayout
                        android:id="@+id/forge_input_5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/equipment_slot_background"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="@color/text_hint"
                            android:textSize="24sp"
                            android:layout_gravity="center" />

                    </FrameLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/arrow_right"
                    android:layout_marginHorizontal="16dp" />

                <!-- Output Item -->
                <FrameLayout
                    android:id="@+id/forge_output"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/equipment_slot_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="?"
                        android:textColor="@color/text_hint"
                        android:textSize="32sp"
                        android:layout_gravity="center" />

                </FrameLayout>

            </LinearLayout>

            <!-- Forge Info -->
            <TextView
                android:id="@+id/forge_info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select 5 items of the same rarity to forge a random item of higher rarity"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Success Rate -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Success Rate: "
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/forge_success_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75%"
                    android:textColor="@color/exp_green"
                    android:textStyle="bold"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Forge Button -->
            <Button
                android:id="@+id/forge_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FORGE"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/button_background"
                android:padding="12dp"
                android:enabled="false" />

        </LinearLayout>

        <!-- Available Equipment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/reward_preview_background"
            android:padding="12dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Equipment"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/available_equipment_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="6" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>