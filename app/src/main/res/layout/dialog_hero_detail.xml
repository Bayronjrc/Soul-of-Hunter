<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/hero_card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Character Detail"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/close_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/close_icon"
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Hero Display Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/reward_preview_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Hero Name -->
            <TextView
                android:id="@+id/hero_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ichigo"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="8dp" />

            <!-- Stars -->
            <LinearLayout
                android:id="@+id/hero_detail_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/detail_star_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star_filled"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:id="@+id/detail_star_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star_empty"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:id="@+id/detail_star_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star_empty"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:id="@+id/detail_star_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star_empty"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:id="@+id/detail_star_5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star_empty" />

            </LinearLayout>

            <!-- Hero Sprite -->
            <ImageView
                android:id="@+id/hero_detail_sprite"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ichigo_mugetsu"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/detail_advanced_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/detail_upstar_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upstar"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background"
                    android:padding="8dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Evolution Figures -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/reward_preview_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evolution Figure"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Base Form -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ichigo_base"
                        android:background="@drawable/circular_frame"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ichigo"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:gravity="center" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_right"
                    android:layout_marginHorizontal="8dp" />

                <!-- Evolution 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ichigo_evolved"
                        android:background="@drawable/circular_frame"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ichigo+4"
                        android:textColor="@color/blue_spiritual"
                        android:textSize="10sp"
                        android:gravity="center" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_right"
                    android:layout_marginHorizontal="8dp" />

                <!-- Evolution 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ichigo_mugetsu"
                        android:background="@drawable/circular_frame"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ichigo+7"
                        android:textColor="@color/purple"
                        android:textSize="10sp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Character Features -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/reward_preview_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/character_features_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Character features: physical output, make enemies bleed, high single ATK"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Faction and Attribute Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/faction_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/shinigami_icon"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/faction_attribute_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shinigami / Core"
                    android:textColor="@color/faction_shinigami"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Skills Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/reward_preview_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Skill 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/getsuga_tensho_icon"
                        android:background="@drawable/circular_frame"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Getsuga"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Skill 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="4dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/hollow_mask_icon"
                        android:background="@drawable/circular_frame"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hollow"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Skill 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/mugetsu_icon"
                        android:background="@drawable/circular_frame"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mugetsu"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Advanced Effects -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/reward_preview_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advance Effect"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/advance_effects_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advanced+1: Awakening skill: Blue Fire\nAdvanced+2: ATK +100\nAdvanced+3: Awakening skill: Danku\nAdvanced+4: Rage skill releasing in the 1st round\nAdvanced+5: Blue Fire releasing chance: 100%\nAdvanced+6: PDMG reduction +15%\nAdvanced+7: Danku releasing chance: 100%\nAdvanced+8: Crit +20%\nAdvanced+9: Rage skill evolving to Getsuga"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Introduction -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/reward_preview_background"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introduction"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/hero_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="An orange-haired high school student, Ichigo becomes a 'substitute Soul Reaper' after unintentionally absorbing most of Rukia's powers."
                android:textColor="@color/white"
                android:textSize="12sp"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>