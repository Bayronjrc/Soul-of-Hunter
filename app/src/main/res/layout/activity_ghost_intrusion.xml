<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ghost_intrusion_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/ghost_intrusion_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/top_bar_background"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ghost_intrusion_back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_arrow"
            android:background="?android:attr/selectableItemBackground"
            android:padding="6dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ghost Intrusion"
            android:textColor="@color/red_hollow"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/event_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:45:12"
            android:textColor="@color/orange"
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:padding="6dp" />

    </LinearLayout>

    <!-- Boss Info -->
    <LinearLayout
        android:id="@+id/boss_info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/boss_card_background"
        android:padding="16dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/ghost_intrusion_header">

        <!-- Boss Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Boss Avatar -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/menos_grande_boss"
                android:background="@drawable/circular_frame_red"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <!-- Boss Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Power: 250,000"
                    android:textColor="@color/orange"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Boss Level Badge -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAID\nBOSS"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="10sp"
                android:gravity="center"
                android:background="@drawable/raid_boss_badge"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Boss HP Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boss HP: "
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/boss_hp_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8,750,000 / 10,000,000"
                    android:textColor="@color/health_red"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/boss_hp_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="87.5%"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="12sp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/boss_hp_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:progress="87"
                android:progressDrawable="@drawable/boss_hp_progress_drawable" />

        </LinearLayout>

        <!-- Guild Participation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guild Members Participating: 24/30"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rank #3"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="12sp"
                android:background="@drawable/rank_badge"
                android:padding="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Player Stats -->
    <LinearLayout
        android:id="@+id/player_stats_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/reward_preview_background"
        android:padding="12dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/boss_info_section">

        <!-- Personal Damage -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Damage"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/player_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125,430"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Personal Rank -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Rank"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/player_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#7"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Remaining Attempts -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attempts Left"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/attempts_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3/3"
                android:textColor="@color/exp_green"
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Leaderboard -->
    <LinearLayout
        android:id="@+id/leaderboard_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/hero_card_background"
        android:padding="12dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/player_stats_section"
        app:layout_constraintBottom_toTopOf="@id/ghost_intrusion_bottom_controls">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Damage Leaderboard"
            android:textColor="@color/gold"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/damage_leaderboard_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/ghost_intrusion_bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_background"
        android:padding="12dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Rewards Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/reward_preview_background"
            android:padding="8dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completion Rewards"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guild Coins â€¢ Rare Materials"
                android:textColor="@color/gold"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- Attack Button -->
        <Button
            android:id="@+id/attack_boss_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATTACK BOSS"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@drawable/button_danger"
            android:padding="12dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
