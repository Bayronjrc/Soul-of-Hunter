<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background">

    <!-- Tab Layout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bar_background"
        app:tabTextColor="@color/text_secondary"
        app:tabSelectedTextColor="@color/gold"
        app:tabIndicatorColor="@color/gold"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipment" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shard" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Inventory Info -->
    <LinearLayout
        android:id="@+id/inventory_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/reward_preview_background"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout">

        <!-- Current Power Display -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Power: "
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/current_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1629"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Inventory Capacity -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/inventory_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47/60"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/extend_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extend"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:background="@drawable/button_background"
                android:padding="6dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- ViewPager for different tabs -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/inventory_info"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>