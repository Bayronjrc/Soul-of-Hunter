<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Opponent Avatar -->
        <ImageView
            android:id="@+id/opponent_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/opponent_avatar"
            android:background="@drawable/circular_frame"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp" />

        <!-- Opponent Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Name and Level -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/opponent_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LV 10 NSPTV"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/opponent_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No.3674"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Power -->
            <TextView
                android:id="@+id/opponent_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Power: 3770"
                android:textColor="@color/orange"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <!-- Rewards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Award: "
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/diamond_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 Diamond"
                    android:textColor="@color/purple"
                    android:textSize="10sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/honor_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300 Honor"
                    android:textColor="@color/gold"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Opponent Formation Preview -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/opponent_hero_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/enemy_hero_1"
                    android:background="@drawable/circular_frame"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:id="@+id/opponent_hero_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/enemy_hero_2"
                    android:background="@drawable/circular_frame"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:id="@+id/opponent_hero_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/enemy_hero_3"
                    android:background="@drawable/circular_frame"
                    android:scaleType="centerCrop" />

            </LinearLayout>

        </LinearLayout>

        <!-- Fight Button -->
        <Button
            android:id="@+id/fight_opponent_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fight"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:padding="8dp"
            android:layout_marginStart="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>