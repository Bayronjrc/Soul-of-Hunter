<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Rank Badge -->
        <TextView
            android:id="@+id/damage_rank"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/rank_badge"
            android:layout_marginEnd="8dp" />

        <!-- Player Avatar ichigo_base va player_avatar-->
        <ImageView
            android:id="@+id/damage_player_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ichigo_base"
            android:background="@drawable/circular_frame"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp" />

        <!-- Player Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/damage_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PlayerName"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/damage_player_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv.25"
                android:textColor="@color/text_secondary"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Damage Amount -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/damage_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,250,000"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/damage_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.5%"
                android:textColor="@color/text_secondary"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Guild Role Badge -->
        <TextView
            android:id="@+id/damage_role_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â˜…"
            android:textColor="@color/gold"
            android:textSize="16sp"
            android:layout_marginStart="4dp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>