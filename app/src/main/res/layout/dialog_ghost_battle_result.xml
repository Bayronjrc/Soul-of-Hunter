<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/hero_card_background"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Battle Result"
            android:textColor="@color/gold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/battle_result_close_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/close_icon"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Battle Summary -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/reward_preview_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <!-- Player Formation -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Team"
                android:textColor="@color/blue_spiritual"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ichigo_icon"
                    android:background="@drawable/circular_frame"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/byakuya_icon"
                    android:background="@drawable/circular_frame"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/kenpachi_icon"
                    android:background="@drawable/circular_frame"
                    android:scaleType="centerCrop" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="12dp" />

        <!-- Boss -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menos Grande"
                android:textColor="@color/red_hollow"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/menos_grande_boss"
                android:background="@drawable/circular_frame_red"
                android:scaleType="centerCrop" />

        </LinearLayout>

    </LinearLayout>

    <!-- Damage Dealt -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/area_button_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Damage Dealt"
            android:textColor="@color/gold"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Damage:"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/battle_damage_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87,500"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Critical Hits:"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/battle_critical_hits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Boss HP After Battle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/reward_preview_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boss Status After Battle"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining HP: "
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/boss_remaining_hp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8,662,500 / 10,000,000"
                android:textColor="@color/health_red"
                android:textStyle="bold"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/boss_remaining_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="86.6%"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="10sp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/boss_remaining_hp_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:progress="86"
            android:progressDrawable="@drawable/boss_hp_progress_drawable" />

    </LinearLayout>

    <!-- Battle Rewards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/area_button_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Battle Rewards"
            android:textColor="@color/gold"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/guild_coin"
                    android:background="@drawable/rarity_rare_bg"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x50"
                    android:textColor="@color/gold"
                    android:textStyle="bold"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/battle_crystal"
                    android:background="@drawable/rarity_epic_bg"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x3"
                    android:textColor="@color/purple"
                    android:textStyle="bold"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Continue Button -->
    <Button
        android:id="@+id/continue_battle_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTINUE"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="@drawable/button_background"
        android:padding="12dp" />

</LinearLayout>