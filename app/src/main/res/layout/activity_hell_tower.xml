<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hell_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/hell_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/top_bar_background"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/hell_back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_arrow"
            android:background="?android:attr/selectableItemBackground"
            android:padding="6dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hell"
            android:textColor="@color/red_hollow"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/hell_help_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/help_icon"
            android:background="?android:attr/selectableItemBackground"
            android:padding="6dp" />

    </LinearLayout>

    <!-- Tower Structure -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/hell_header"
        app:layout_constraintBottom_toTopOf="@id/hell_bottom_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Layer 4 -->
            <LinearLayout
                android:id="@+id/layer_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/tower_platform"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4layer"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:background="@drawable/layer_label"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/tower_enemy_4"
                        android:background="@drawable/circular_frame"
                        android:scaleType="centerCrop" />

                </LinearLayout>

            </LinearLayout>

            <!-- Layer 3 -->
            <LinearLayout
                android:id="@+id/layer_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/tower_platform"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3layer"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:background="@drawable/layer_label"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/tower_enemy_3"
                        android:background="@drawable/circular_frame"
                        android:scaleType="centerCrop" />

                </LinearLayout>

            </LinearLayout>

            <!-- Layer 2 -->
            <LinearLayout
                android:id="@+id/layer_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/tower_platform"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2layer"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="@drawable/layer_label"
                        android:padding="6dp"
                        android:layout_marginBottom="12dp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/tower_enemy_2"
                        android:background="@drawable/circular_frame"
                        android:scaleType="centerCrop" />

                </LinearLayout>

            </LinearLayout>

            <!-- Layer 1 (Current/Available) -->
            <LinearLayout
                android:id="@+id/layer_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/tower_platform_current"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1layer"
                        android:textColor="@color/gold"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:background="@drawable/layer_label_current"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Current Enemy -->
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ichigo_icon"
                            android:background="@drawable/circular_frame_gold"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="16dp" />

                        <!-- VS -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VS"
                            android:textColor="@color/red_hollow"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginHorizontal="8dp" />

                        <!-- Boss Enemy -->
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/tower_boss_1"
                            android:background="@drawable/circular_frame"
                            android:scaleType="centerCrop"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Info Panel -->
    <LinearLayout
        android:id="@+id/hell_bottom_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_background"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Remaining Raids Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/reward_preview_background"
            android:padding="8dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remaining today"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/remaining_raids"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Raids times: 10"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Purchase Button -->
        <Button
            android:id="@+id/purchase_raids_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purchase"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:padding="8dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Enemy Info Dialog Overlay (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/enemy_info_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/hero_card_background"
        android:padding="16dp"
        android:layout_margin="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Enemy Info Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enemy Information"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/close_enemy_info"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/close_icon"
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Boss Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/reward_preview_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardian BOSS: "
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/boss_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ulquiorra"
                android:textColor="@color/red_hollow"
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Boss Formation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/boss_icon_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ulquiorra_icon"
                android:background="@drawable/circular_frame"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/boss_icon_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/toshiro_icon"
                android:background="@drawable/circular_frame"
                android:scaleType="centerCrop"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Drops Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Must drop in the 1st challenge:"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <!-- Drop Item 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/crystal_drop"
                    android:background="@drawable/rarity_rare_bg"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x10"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Drop Item 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ulquiorra_shard"
                    android:background="@drawable/rarity_epic_bg"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x3"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Drop Item 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/tome_drop"
                    android:background="@drawable/rarity_legendary_bg"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x4"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Challenge Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Challenge times: 3/3"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/challenge_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenge"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>