<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="6dp">

        <!-- Equipment Container -->
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="4dp">

            <!-- Rarity Background -->
            <View
                android:id="@+id/equipment_rarity_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rarity_common_bg" />

            <!-- Equipment Image -->
            <ImageView
                android:id="@+id/equipment_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/shadow_armor"
                android:scaleType="centerCrop" />

            <!-- Enhancement Level -->
            <TextView
                android:id="@+id/equipment_enhancement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LV 0"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:textStyle="bold"
                android:background="@color/semi_transparent_black"
                android:padding="1dp"
                android:layout_gravity="top|start"
                android:layout_margin="1dp" />

            <!-- Equipped Status -->
            <ImageView
                android:id="@+id/equipped_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/equipped_check"
                android:layout_gravity="bottom|end"
                android:layout_margin="2dp"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Equipment Name -->
        <TextView
            android:id="@+id/equipment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shadow Armor"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="2dp" />

        <!-- Equipment Rating -->
        <TextView
            android:id="@+id/equipment_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating: 78"
            android:textColor="@color/orange"
            android:textSize="8sp"
            android:gravity="center" />

    </LinearLayout>

</androidx.cardview.widget.CardView>