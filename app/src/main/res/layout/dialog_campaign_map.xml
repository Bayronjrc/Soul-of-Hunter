<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/map_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/top_bar_background"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/map_back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_arrow"
            android:background="?android:attr/selectableItemBackground"
            android:padding="6dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Map"
            android:textColor="@color/gold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/map_help_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/help_icon"
            android:background="?android:attr/selectableItemBackground"
            android:padding="6dp" />

    </LinearLayout>

    <!-- Map Info -->
    <LinearLayout
        android:id="@+id/map_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/reward_preview_background"
        android:padding="12dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/map_header">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It has opened 1 map, 50 still no open yet."
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Current Stage Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/area_button_background"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/stage_icon"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stage_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Day I Became a Shinigami"
                    android:textColor="@color/purple"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/stage_enemy_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enemy Level: Lv.1"
                    android:textColor="@color/orange"
                    android:textSize="12sp" />

            </LinearLayout>

            <Button
                android:id="@+id/stage_select_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Boss Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beat the BOSS to unlock the next stage."
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Stage Map -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/map_info"
        app:layout_constraintBottom_toTopOf="@id/map_bottom_controls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stage Level Path -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Stage 1-1 -->
                <LinearLayout
                    android:id="@+id/stage_1_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/stage_completed_bg"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-1"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Path Arrow -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/path_arrow"
                    android:layout_marginHorizontal="4dp" />

                <!-- Stage 1-2 -->
                <LinearLayout
                    android:id="@+id/stage_1_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/stage_current_bg"
                    android:layout_marginHorizontal="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-2"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Path Arrow -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/path_arrow"
                    android:layout_marginHorizontal="4dp"
                    android:alpha="0.5" />

                <!-- Stage 1-3 (Locked) -->
                <LinearLayout
                    android:id="@+id/stage_1_3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/stage_locked_bg"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/lock_icon"
                        android:alpha="0.7" />

                </LinearLayout>

            </LinearLayout>

            <!-- Boss Stage -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/boss_stage_bg"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/boss_stage_icon"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOSS STAGE"
                    android:textColor="@color/red_hollow"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Defeat the boss to unlock Chapter 2"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Chapter Preview -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/reward_preview_background"
                android:padding="16dp"
                android:alpha="0.6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chapter 2 - Soul Society"
                    android:textColor="@color/text_hint"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Locked"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/map_bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_background"
        android:padding="12dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/boss_challenge_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="The times of challenging Boss still has: 3"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/purchase_attempts_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purchase"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:padding="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>