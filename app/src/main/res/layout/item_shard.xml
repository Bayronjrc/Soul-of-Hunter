<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <!-- Hero Shard Image Container -->
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp">

            <!-- Rarity Background -->
            <View
                android:id="@+id/shard_rarity_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rarity_epic_bg" />

            <!-- Hero Image -->
            <ImageView
                android:id="@+id/shard_hero_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ichigo_icon"
                android:scaleType="centerCrop" />

            <!-- Shard Overlay -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shard_overlay"
                android:scaleType="centerCrop"
                android:alpha="0.7" />

            <!-- Fragment Count -->
            <TextView
                android:id="@+id/shard_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/20"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@color/semi_transparent_black"
                android:padding="2dp"
                android:layout_gravity="bottom|center"
                android:layout_margin="2dp" />

        </FrameLayout>

        <!-- Hero Name -->
        <TextView
            android:id="@+id/shard_hero_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ichigo"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="2dp" />

        <!-- Gain Button -->
        <Button
            android:id="@+id/gain_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gain"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:background="@drawable/button_background"
            android:padding="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>