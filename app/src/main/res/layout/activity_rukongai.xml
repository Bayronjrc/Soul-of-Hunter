<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rukongai_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/rukongai_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/top_bar_background"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rukongai_back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_arrow"
            android:background="?android:attr/selectableItemBackground"
            android:padding="6dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rukongai_1"
            android:textColor="@color/gold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/rukongai_help_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:padding="6dp" />

    </LinearLayout>

    <!-- Currency Display -->
    <LinearLayout
        android:id="@+id/rukongai_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/reward_preview_background"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/rukongai_header">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gold_icon"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/rukongai_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4000"
            android:textColor="@color/gold"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@drawable/button_secondary"
            android:padding="6dp" />

    </LinearLayout>

    <!-- Map Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/rukongai_currency"
        app:layout_constraintBottom_toTopOf="@id/rukongai_bottom_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- District Map -->
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:background="@drawable/rukongai_map_bg"
                android:padding="20dp"
                android:gravity="center">

                <!-- Top Area -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:id="@+id/area_top_left"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rukongai_area_bg"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/material_crystal"
                            android:layout_marginBottom="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/area_top_right"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rukongai_area_bg"
                        android:layout_marginStart="20dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/material_essence"
                            android:layout_marginBottom="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Center Area -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginVertical="8dp">

                    <LinearLayout
                        android:id="@+id/area_center_left"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rukongai_area_bg"
                        android:layout_marginEnd="40dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/material_tome"
                            android:layout_marginBottom="4dp" />

                    </LinearLayout>

                    <!-- Central Temple -->
                    <LinearLayout
                        android:id="@+id/central_temple"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/central_temple_bg">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/temple_icon"
                            android:scaleType="centerCrop" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/area_center_right"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rukongai_area_bg"
                        android:layout_marginStart="40dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/material_scroll"
                            android:layout_marginBottom="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Bottom Area -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:id="@+id/area_bottom_left"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rukongai_area_bg"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/material_orb"
                            android:layout_marginBottom="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/area_bottom_right"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rukongai_area_bg"
                        android:layout_marginStart="20dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/material_fragment"
                            android:layout_marginBottom="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Area Info Display -->
            <LinearLayout
                android:id="@+id/area_info_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/hero_card_background"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/selected_area_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crystal Garden"
                    android:textColor="@color/gold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:id="@+id/area_material_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/material_crystal"
                        android:background="@drawable/rarity_epic_bg"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/area_material_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Awakening Crystal"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/area_material_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Required for Hero Awakening"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cost: 100 Gold per attempt"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/gather_material_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gather"
                        android:textColor="@color/white"
                        android:background="@drawable/button_background"
                        android:padding="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Info -->
    <LinearLayout
        android:id="@+id/rukongai_bottom_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_nav_background"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/battle_report_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Battle report"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:background="@drawable/button_secondary"
                android:padding="6dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/divination_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Divination"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:background="@drawable/button_secondary"
                android:padding="6dp"
                android:layout_marginHorizontal="2dp" />

            <Button
                android:id="@+id/levy_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Levy"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:background="@drawable/button_secondary"
                android:padding="6dp"
                android:layout_marginHorizontal="2dp" />

            <Button
                android:id="@+id/slave_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Slave"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:background="@drawable/button_secondary"
                android:padding="6dp"
                android:layout_marginHorizontal="2dp" />

            <Button
                android:id="@+id/rukongai_award_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rukongai award"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:background="@drawable/button_secondary"
                android:padding="6dp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>