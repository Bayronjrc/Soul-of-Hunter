<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/hero_card_background"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Boss Defeated!"
            android:textColor="@color/gold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/rewards_close_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/close_icon"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Victory Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🎉 Menos Grande has been defeated! 🎉"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Guild Ranking -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/reward_preview_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guild Ranking:"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/final_guild_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#3"
            android:textColor="@color/gold"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Personal Stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/reward_preview_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Performance"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Damage:"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/final_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,250,000"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Personal Rank:"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/final_personal_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#7"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Rewards Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rewards Received"
        android:textColor="@color/gold"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Rewards Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Reward 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/guild_coin"
                    android:background="@drawable/rarity_legendary_bg"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x500"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:background="@color/semi_transparent_black"
                    android:padding="1dp"
                    android:layout_gravity="bottom|center" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guild Coins"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Reward 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/rare_crystal"
                    android:background="@drawable/rarity_epic_bg"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x25"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:background="@color/semi_transparent_black"
                    android:padding="1dp"
                    android:layout_gravity="bottom|center" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rare Crystals"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Reward 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/menos_shard"
                    android:background="@drawable/rarity_mythic_bg"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x5"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:background="@color/semi_transparent_black"
                    android:padding="1dp"
                    android:layout_gravity="bottom|center" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boss Shards"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bonus Reward (MVP) -->
    <LinearLayout
        android:id="@+id/mvp_bonus_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/mvp_bonus_bg"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🏆 MVP Bonus! 🏆"
            android:textColor="@color/gold"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/mvp_trophy"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+200 Guild Coins"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Claim Button -->
    <Button
        android:id="@+id/claim_rewards_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLAIM REWARDS"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/button_background"
        android:padding="12dp" />

</LinearLayout>