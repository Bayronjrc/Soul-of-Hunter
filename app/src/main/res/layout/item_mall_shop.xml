<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Discount Badge -->
        <TextView
            android:id="@+id/discount_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70% off"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@color/red_hollow"
            android:padding="4dp"
            android:layout_gravity="end"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Item Image -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp">

            <View
                android:id="@+id/shop_item_rarity_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rarity_epic_bg" />

            <ImageView
                android:id="@+id/shop_item_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/chaos_pauldron"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/shop_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/semi_transparent_black"
                android:padding="2dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp" />

        </FrameLayout>

        <!-- Item Name -->
        <TextView
            android:id="@+id/shop_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chaos Pauldron"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />

        <!-- Price Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Currency Icon -->
            <ImageView
                android:id="@+id/price_currency_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/gold_icon"
                android:layout_marginEnd="4dp" />

            <!-- Current Price -->
            <TextView
                android:id="@+id/shop_item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5850/one"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="12sp" />

            <!-- Original Price (crossed out) -->
            <TextView
                android:id="@+id/shop_item_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8000"
                android:textColor="@color/text_hint"
                android:textSize="10sp"
                android:visibility="gone"
                android:background="@drawable/strikethrough" />

        </LinearLayout>

        <!-- Purchase Button -->
        <Button
            android:id="@+id/shop_purchase_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purchase"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:padding="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>