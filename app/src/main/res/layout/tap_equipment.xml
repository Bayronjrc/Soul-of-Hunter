<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Filter Section -->
    <LinearLayout
        android:id="@+id/equipment_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Sort by Type -->
        <Button
            android:id="@+id/sort_by_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All Types"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:background="@drawable/button_background"
            android:padding="6dp"
            android:layout_marginEnd="4dp" />

        <!-- Sort by Rarity -->
        <Button
            android:id="@+id/sort_by_rarity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All Rarities"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:background="@drawable/button_background"
            android:padding="6dp"
            android:layout_marginHorizontal="2dp" />

        <!-- Sort by Rating -->
        <Button
            android:id="@+id/sort_by_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rating â†“"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:background="@drawable/button_background"
            android:padding="6dp"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- Equipment Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/equipment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="4dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/equipment_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="5" />

</androidx.constraintlayout.widget.ConstraintLayout>