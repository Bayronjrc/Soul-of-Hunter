<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_card"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="@color/gold"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/background_card"
                android:endColor="@color/primary_dark"
                android:angle="45"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@color/text_secondary"/>
        </shape>
    </item>
</selector>