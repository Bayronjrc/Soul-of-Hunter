<!-- res/drawable/guild_coin.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base de la moneda -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/gold" /> <!-- Usando tu @color/gold -->
            <size
                android:width="32dp"
                android:height="32dp" />
            <stroke
                android:width="1.5dp"
                android:color="#DAA520" /> <!-- Goldenrod, un dorado más oscuro para el borde -->
        </shape>
    </item>
    <!-- Detalle interior o brillo -->
    <item
        android:width="12dp"
        android:height="12dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#FFFACD" /> <!-- LemonChiffon, un dorado más claro para brillo -->
        </shape>
    </item>
    <!-- Pequeño símbolo (ej. una estrella simple) -->
    <item
        android:width="8dp"
        android:height="8dp"
        android:gravity="center">
        <rotate android:fromDegrees="45" android:toDegrees="45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#B8860B" /> <!-- DarkGoldenrod -->
            </shape>
        </rotate>
    </item>
    <item
        android:width="8dp"
        android:height="8dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#B8860B" /> <!-- DarkGoldenrod -->
        </shape>
    </item>
</layer-list>
