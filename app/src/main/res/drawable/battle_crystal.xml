<!-- res/drawable/battle_crystal.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base del cristal -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/purple" /> <!-- Usando tu @color/purple, asumo que existe -->
                <!-- Si no, usa un hexadecimal como #8A2BE2 (BlueViolet) -->
                <size
                    android:width="28dp"
                    android:height="28dp" />
                <stroke
                    android:width="1dp"
                    android:color="#4B0082" /> <!-- Indigo, un morado mÃ¡s oscuro -->
            </shape>
        </rotate>
    </item>
    <!-- Brillo o faceta interior -->
    <item
        android:width="15dp"
        android:height="15dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#30FFFFFF" /> <!-- Blanco muy transparente para brillo -->
            <corners android:radius="1dp" />
        </shape>
    </item>
</layer-list>