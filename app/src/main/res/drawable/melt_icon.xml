<!-- res/drawable/melt_icon.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gota principal -->
    <item android:gravity="center_horizontal|top" android:top="5dp">
        <shape android:shape="oval">
            <solid android:color="@color/exp_green"/> <!-- Verde ácido o un color de "fusión" -->
            <size android:width="16dp" android:height="16dp"/>
        </shape>
    </item>
    <!-- Estela de la gota -->
    <item android:gravity="center_horizontal|bottom" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/red_hollow"/>
            <size android:width="6dp" android:height="10dp"/>
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp"/>
        </shape>
    </item>
    <!-- Pequeñas gotas secundarias -->
    <item android:gravity="left|center_vertical" android:left="5dp" android:top="3dp">
        <shape android:shape="oval">
            <solid android:color="@color/yellow"/>
            <size android:width="5dp" android:height="5dp"/>
        </shape>
    </item>
</layer-list>