<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base del ícono -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/gold" /> <!-- Usando el color oro que es prominente -->
            <size
                android:width="48dp"
                android:height="48dp" />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
        </shape>
    </item>
    <!-- Símbolo simple de "play" o "ubicación" -->
    <item
        android:left="12dp"
        android:right="12dp"
        android:top="12dp"
        android:bottom="12dp">
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <!-- Esto creará una forma de flecha/triángulo apuntando a la derecha -->
                <solid android:color="@color/white"/>
                <corners android:topRightRadius="2dp" android:bottomRightRadius="2dp"
                    android:topLeftRadius="0dp" android:bottomLeftRadius="0dp" />
            </shape>
        </rotate>
    </item>
</layer-list>
