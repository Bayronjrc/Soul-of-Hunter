<!-- res/drawable/boss_enemy.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/purple"/> <!-- Morado oscuro para jefe -->
            <size android:width="60dp" android:height="60dp"/>
            <stroke android:width="2dp" android:color="@color/gold"/>
        </shape>
    </item>
    <!-- "Cuernos" o "Corona" -->
    <item android:gravity="top|center_horizontal" android:top="5dp" android:width="10dp" android:height="15dp">
        <rotate android:fromDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/gold"/>
            </shape>
        </rotate>
    </item>
    <item android:gravity="top|center_horizontal" android:top="8dp" android:left="15dp" android:width="8dp" android:height="12dp">
        <rotate android:fromDegrees="-30" android:pivotX="50%" android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/gold"/>
            </shape>
        </rotate>
    </item>
    <item android:gravity="top|center_horizontal" android:top="8dp" android:right="15dp" android:width="8dp" android:height="12dp">
        <rotate android:fromDegrees="30" android:pivotX="50%" android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/gold"/>
            </shape>
        </rotate>
    </item>
</layer-list>
