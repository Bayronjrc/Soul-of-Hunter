<!-- res/drawable/level_reward_icon.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cofre (base) -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_dark"/>
            <size android:width="28dp" android:height="20dp"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <!-- Tapa del cofre -->
    <item android:bottom="14dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/yellow"/>
            <size android:width="30dp" android:height="10dp"/>
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp"/>
        </shape>
    </item>
    <!-- Cerradura -->
    <item android:gravity="center" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/gold"/>
            <size android:width="8dp" android:height="6dp"/>
        </shape>
    </item>
    <!-- Flecha hacia arriba indicando "subida de nivel" o "recompensa" -->
    <item android:gravity="top|center_horizontal" android:top="1dp" android:width="3dp" android:height="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/exp_green"/>
        </shape>
    </item>
    <item android:gravity="top|center_horizontal" android:top="0dp">
        <rotate android:fromDegrees="45" android:pivotX="0%" android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/exp_green"/>
                <size android:width="6dp" android:height="3dp"/>
            </shape>
        </rotate>
    </item>
    <item android:gravity="top|center_horizontal" android:top="0dp">
        <rotate android:fromDegrees="-45" android:pivotX="100%" android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/exp_green"/>
                <size android:width="6dp" android:height="3dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>
