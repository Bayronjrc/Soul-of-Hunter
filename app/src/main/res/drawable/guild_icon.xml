<!-- res/drawable/guild_icon.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Forma de escudo -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_dark"/> <!-- Azul para el escudo -->
            <size android:width="26dp" android:height="30dp"/>
            <corners android:topLeftRadius="13dp" android:topRightRadius="13dp"
                android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp"/>
            <stroke android:width="2dp" android:color="@color/gold"/>
        </shape>
    </item>
    <!-- SÃ­mbolo en el escudo (ej. una "G" estilizada o una torre) -->
    <item android:gravity="center" android:width="4dp" android:height="15dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/gold"/>
        </shape>
    </item>
    <item android:gravity="center_vertical|left" android:left="11dp" android:width="8dp" android:height="4dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/gold"/>
        </shape>
    </item>
</layer-list>
