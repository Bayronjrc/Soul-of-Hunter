<!-- res/drawable/menos_shard.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fragmento base oscuro e irregular -->
    <item>
        <rotate android:fromDegrees="25" android:pivotX="60%" android:pivotY="40%">
            <shape android:shape="rectangle">
                <solid android:color="@color/white"/> <!-- Gris muy oscuro o negro de Menos -->
                <size android:width="25dp" android:height="20dp"/>
                <corners android:radius="2dp"/>
            </shape>
        </rotate>
    </item>
    <!-- Borde o detalle rojo (como la línea en la máscara de Menos) -->
    <item>
        <rotate android:fromDegrees="25" android:pivotX="60%" android:pivotY="40%">
            <shape android:shape="rectangle">
                <stroke android:width="2dp" android:color="@color/red_hollow"/>
                <size android:width="25dp" android:height="20dp"/>
                <corners android:radius="2dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>