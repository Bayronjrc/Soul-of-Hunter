<!-- res/drawable/hell_icon.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo oscuro -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FF200000"/> <!-- Rojo muy oscuro, casi negro -->
            <size android:width="32dp" android:height="32dp"/>
            <stroke android:width="1.5dp" android:color="@color/red_hollow"/>
        </shape>
    </item>
    <!-- "Llamas" o "Puerta" estilizada -->
    <item android:gravity="bottom|center_horizontal" android:width="12dp" android:height="10dp">
        <shape android:shape="oval">
            <solid android:color="@color/health_red"/> <!-- Naranja para llamas -->
        </shape>
    </item>
    <item android:gravity="center" android:width="6dp" android:height="15dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/red_hollow"/>
            <corners android:topLeftRadius="3dp" android:topRightRadius="3dp"/>
        </shape>
    </item>
</layer-list>