<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del ícono (quizás un color oscuro o rojo) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/red_hollow" /> <!-- Usando tu color red_hollow -->
            <size
                android:width="80dp"
                android:height="80dp" />
            <stroke
                android:width="3dp"
                android:color="@color/gold" />
        </shape>
    </item>
    <!-- Símbolo de "calavera" o "cuernos" simplificado -->
    <!-- Elemento 1 (Cuerno izquierdo) -->
    <item android:gravity="center" android:right="15dp" android:bottom="10dp">
        <rotate
            android:fromDegrees="-30"
            android:pivotX="100%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
                <corners android:topLeftRadius="10dp" android:topRightRadius="2dp"
                    android:bottomLeftRadius="2dp" android:bottomRightRadius="10dp" />
                <size android:width="25dp" android:height="8dp" />
            </shape>
        </rotate>
    </item>
    <!-- Elemento 2 (Cuerno derecho) -->
    <item android:gravity="center" android:left="15dp" android:bottom="10dp">
        <rotate
            android:fromDegrees="30"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
                <corners android:topLeftRadius="2dp" android:topRightRadius="10dp"
                    android:bottomLeftRadius="10dp" android:bottomRightRadius="2dp" />
                <size android:width="25dp" android:height="8dp" />
            </shape>
        </rotate>
    </item>
    <!-- "Ojo" o detalle central -->
    <item android:gravity="center" android:bottom="5dp">
        <shape android:shape="oval">
            <solid android:color="@color/gold" />
            <size android:width="10dp" android:height="15dp" />
        </shape>
    </item>
</layer-list>
