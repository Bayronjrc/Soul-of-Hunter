<!-- res/drawable/hollow_mask_icon.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base de la máscara (blanca) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <size android:width="40dp" android:height="40dp" />
            <stroke android:width="1dp" android:color="#A0A0A0" /> <!-- Borde gris claro -->
        </shape>
    </item>
    <!-- Marcas rojas (muy simplificadas) -->
    <!-- "Diente" superior izquierdo -->
    <item android:gravity="top|left" android:left="8dp" android:top="10dp">
        <rotate android:fromDegrees="-30" android:pivotX="0%" android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="@color/red_hollow" /> <!-- Asumo que tienes este color -->
                <size android:width="10dp" android:height="4dp" />
                <corners android:topLeftRadius="2dp" android:bottomLeftRadius="2dp"/>
            </shape>
        </rotate>
    </item>
    <!-- "Diente" superior derecho -->
    <item android:gravity="top|right" android:right="8dp" android:top="10dp">
        <rotate android:fromDegrees="30" android:pivotX="100%" android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="@color/red_hollow" />
                <size android:width="10dp" android:height="4dp" />
                <corners android:topRightRadius="2dp" android:bottomRightRadius="2dp"/>
            </shape>
        </rotate>
    </item>
    <!-- Línea central/inferior -->
    <item android:gravity="bottom|center_horizontal" android:bottom="10dp" android:width="15dp" android:height="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/red_hollow" />
            <corners android:radius="1dp"/>
        </shape>
    </item>
</layer-list>
