<!-- res/drawable/mugetsu_icon.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo negro profundo -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FF000000" /> <!-- Negro sólido -->
            <size android:width="40dp" android:height="40dp"/>
            <stroke android:width="1.5dp" android:color="#4A4A4A" /> <!-- Borde gris muy oscuro -->
        </shape>
    </item>
    <!-- Destello de energía o fragmento de la hoja -->
    <item android:gravity="center">
        <rotate android:fromDegrees="45" android:toDegrees="45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#50FFFFFF"
                    android:centerColor="#A06A6A6A"
                    android:endColor="#00000000"
                    android:type="linear"
                    android:angle="90"/>
                <size android:width="8dp" android:height="25dp"/>
                <corners android:radius="2dp"/>
            </shape>
        </rotate>
    </item>
    <!-- Otro destello -->
    <item android:gravity="center_vertical|left" android:left="10dp">
        <rotate android:fromDegrees="-10" android:toDegrees="-10" android:pivotX="0%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#30FFFFFF" />
                <size android:width="15dp" android:height="4dp"/>
                <corners android:radius="2dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>
