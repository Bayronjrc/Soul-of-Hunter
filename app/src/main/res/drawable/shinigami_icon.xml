<!-- res/drawable/shinigami_icon.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del ícono -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/faction_shinigami" /> <!-- Usando tu color de facción -->
            <size android:width="24dp" android:height="24dp" />
            <stroke android:width="1dp" android:color="#A0A0A0" /> <!-- Borde gris sutil -->
        </shape>
    </item>
    <!-- Elemento central (espada estilizada o emblema) -->
    <!-- Empuñadura -->
    <item android:gravity="center" android:width="4dp" android:height="10dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="1dp" />
        </shape>
    </item>
    <!-- Guarda -->
    <item android:gravity="center" android:width="10dp" android:height="3dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>