<!-- res/drawable/sign_in_icon.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Persona (cabeza y cuerpo) -->
    <item android:gravity="center" android:right="5dp">
        <shape android:shape="oval">
            <solid android:color="@color/white"/>
            <size android:width="10dp" android:height="10dp"/>
        </shape>
    </item>
    <item android:gravity="bottom|center_horizontal" android:bottom="2dp" android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <size android:width="14dp" android:height="8dp"/>
            <corners android:topLeftRadius="7dp" android:topRightRadius="7dp"/>
        </shape>
    </item>
    <!-- Flecha entrando -->
    <item android:gravity="center_vertical|right" android:right="1dp" android:width="10dp" android:height="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/red_hollow"/>"/> <!-- Un verde para "entrar" -->
        </shape>
    </item>
    <item android:gravity="center_vertical|right" android:right="0dp">
        <rotate android:fromDegrees="45" android:pivotX="100%" android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="@color/red_hollow"/>
                <size android:width="6dp" android:height="3dp"/>
            </shape>
        </rotate>
    </item>
    <item android:gravity="center_vertical|right" android:right="0dp">
        <rotate android:fromDegrees="-45" android:pivotX="100%" android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/red_hollow"/>
                <size android:width="6dp" android:height="3dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>
