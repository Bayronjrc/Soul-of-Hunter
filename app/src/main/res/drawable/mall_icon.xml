<!-- res/drawable/mall_icon.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bolsa de compras -->
    <item android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/health_red"/> <!-- Color para la bolsa -->
            <size android:width="22dp" android:height="18dp"/>
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp"/>
        </shape>
    </item>
    <!-- Asa de la bolsa -->
    <item android:bottom="10dp" android:left="3dp" android:right="3dp">
        <shape android:shape="rectangle">
            <stroke android:width="2.5dp" android:color="@color/design_default_color_primary_dark"/>
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp"/>
            <size android:width="16dp" android:height="10dp"/>
        </shape>
    </item>
    <!-- Detalle (ej. una gema o moneda en la bolsa) -->
    <item android:gravity="center" android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/gold"/>
            <size android:width="8dp" android:height="8dp"/>
        </shape>
    </item>
</layer-list>
