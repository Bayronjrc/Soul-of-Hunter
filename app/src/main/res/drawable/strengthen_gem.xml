<!-- res/drawable/strengthen_gem.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base de la gema -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/exp_green"/> <!-- Verde esmeralda o un color de "poder" -->
            <size android:width="28dp" android:height="28dp"/>
            <stroke android:width="1dp" android:color="@color/primary_light"/>
        </shape>
    </item>
    <!-- Facetas / Brillo -->
    <item android:gravity="center" android:width="12dp" android:height="12dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#60FFFFFF"/> <!-- Blanco semi-transparente -->
            </shape>
        </rotate>
    </item>
    <item android:gravity="center" android:width="18dp" android:height="18dp">
        <shape android:shape="oval">
            <stroke android:width="1.5dp" android:color="#30FFFFFF"/>
        </shape>
    </item>
</layer-list>
