<!-- res/drawable/getsuga_tensho_icon.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del ícono -->
    <item>
        <shape android:shape="oval">
            <!-- Un azul oscuro o negro para la base del Getsuga -->
            <solid android:color="#FF000080" /> <!-- Navy Blue, o un negro azulado -->
            <size android:width="40dp" android:height="40dp"/>
            <stroke android:width="1.5dp" android:color="@color/blue_spiritual" />
        </shape>
    </item>
    <!-- Ráfaga de energía (estilizada) -->
    <item android:gravity="center">
        <rotate android:fromDegrees="-15" android:toDegrees="-15" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="oval">
                <gradient
                    android:startColor="#A0FFFFFF"
                    android:centerColor="@color/blue_spiritual"
                    android:endColor="#00000080"
                    android:type="linear"
                    android:angle="45"/>
                <size android:width="30dp" android:height="15dp"/>
                <corners android:radius="7dp"/>
            </shape>
        </rotate>
    </item>
    <item android:gravity="center">
        <rotate android:fromDegrees="15" android:toDegrees="15" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="oval">
                <gradient
                    android:startColor="#A0FFFFFF"
                    android:centerColor="@color/blue_spiritual"
                    android:endColor="#00000080"
                    android:type="linear"
                    android:angle="-45"/>
                <size android:width="30dp" android:height="15dp"/>
                <corners android:radius="7dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>
